#!/bin/bash

fflag=''
qflag=''
usage='usage: install [-h | [-fq]]'

while getopts hfq flag; do
  case "${flag}" in
    h) echo $usage ;;
    f) fflag='true' ;;
    q) qflag='true' ;;
    *) error "Unexpected option ${flag}"; echo $usage ;;
  esac
done

for i in $( ls -A ~/Git/kitsune-settings/settings | grep -v '/$' )
do
  cp -R $([ ! $fflag ] && echo '-i') $([ ! $qflag ] && echo '-v') ~/Git/kitsune-settings/settings/$i ~/
done

if [ ! $qflag ]
then
  echo "Finished installing settings"
  echo "Restart terminal to see changes"
fi

exit 0
